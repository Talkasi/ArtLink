{
  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.File"],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/app.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7
        }
      }
    ]
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=artlink_db;Username=postgres;Password=postgres"
  },
  "BusinessSettings": {
    "MaxPortfoliosPerArtist": 5
  },
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://0.0.0.0:7000"
      }
    }
  },
  "Jwt": {
    "Key": "Z>QxX>#0u&$N\"+o<jJVK/kA<CmJIWo(-7I+R#8u~=v_tph<N11B+??m,y}wVg^0",
    "Issuer": "ArtLink",
    "Audience": "ArtLinkUsers",
    "ExpireDays": 7
  }
}
